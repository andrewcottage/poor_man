<div class="hidden" role="dialog" aria-modal="true" data-mobile-menu-target="menu">
  <!-- Background backdrop, show/hide based on slide-over state. -->
  <div class="fixed inset-0 z-50"></div>
  <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
    <div class="flex items-center justify-between">
      <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
      <span class="sr-only">Poor Man with a Pan</span>
      <img class="h-8 w-auto" src="/logo.webp" alt="">
      <% end %>
      <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700" data-action="click->mobile-menu#toggle">
        <span class="sr-only">Close menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <div class="mt-6 flow-root">
      <div class="-my-6 divide-y divide-gray-500/10">
        <div class="space-y-2 py-6">
          <%= link_to "Recipes", recipes_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
          <%= link_to "Categories", categories_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
          <% if Current.user %>
            <%= link_to "AI Generator", recipes_generations_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
          <% end %>
          <%= link_to "About", about_pages_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
        </div>
        <div class="py-6">
          <% if Current.user %>
          <%= link_to "Profile", profile_path(Current.user), class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
          <%= link_to "Favorites", profiles_favorites_path(), class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
          <%= link_to "My Recipes", profiles_recipes_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
          <%= button_to "Sign Out", session_path(Current.user), method: :delete, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
          <% else %>
          <%= link_to "Log In", new_session_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>