<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center mb-4">
    <%= link_to family_cookbooks_path(@family), class: "text-blue-600 hover:text-blue-800 mr-4" do %>
      <svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Cookbooks
    <% end %>
  </div>

  <div class="flex justify-between items-start mb-8">
    <div>
      <div class="flex items-center mb-2">
        <h1 class="text-3xl font-bold text-gray-900 mr-3"><%= @cookbook.name %></h1>
        <% if @cookbook.is_default? %>
          <span class="bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded">Default</span>
        <% end %>
      </div>
      
      <% if @cookbook.description.present? %>
        <p class="text-gray-600 text-lg mb-2"><%= @cookbook.description %></p>
      <% end %>
      
      <p class="text-sm text-gray-500">
        <%= pluralize(@cookbook.recipes.count, 'recipe') %> â€¢ 
        Part of <%= @family.name %> family
      </p>
    </div>
    
    <div class="flex space-x-2">
      <%= link_to "Add Recipe", new_family_cookbook_cookbooks_recipe_path(@family, @cookbook), class: "btn btn-primary" %>
      <% if @family.can_manage?(Current.user) && !@cookbook.is_default? %>
        <%= link_to "Edit Cookbook", edit_family_cookbook_path(@family, @cookbook), class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>

  <% if @recipes.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      <% @recipes.each do |recipe| %>
        <%= render 'recipes/card', recipe: recipe %>
      <% end %>
    </div>
    
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  <% else %>
    <div class="text-center py-12">
      <div class="max-w-md mx-auto">
        <h3 class="text-lg font-medium text-gray-900 mb-2">No recipes yet</h3>
        <p class="text-gray-600 mb-6">Start adding recipes to this cookbook to share with your family.</p>
        <%= link_to "Add First Recipe", new_family_cookbook_cookbooks_recipe_path(@family, @cookbook), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>