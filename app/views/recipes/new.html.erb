<div class="mx-auto md:w-2/3 w-full" data-controller="ai-recipe-generator">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">New recipe</h1>
    <button type="button" 
            data-action="click->ai-recipe-generator#openModal"
            class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-6 py-3 rounded-lg font-medium hover:from-blue-600 hover:to-purple-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105 flex items-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
      Generate with AI
    </button>
  </div>

  <!-- AI Generation Modal -->
  <div data-ai-recipe-generator-target="modal" 
       class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden items-center justify-center"
       data-action="click->ai-recipe-generator#handleBackdropClick">
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4 relative">
      <button type="button" 
              data-action="click->ai-recipe-generator#closeModal"
              class="absolute top-4 right-4 text-gray-500 hover:text-gray-700">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
      
      <h2 class="text-2xl font-bold mb-4 text-gray-800">Generate Recipe with AI</h2>
      <p class="text-gray-600 mb-4">Describe the recipe you'd like to create, and our AI will generate a complete recipe for you!</p>
      
      <div class="mb-4">
        <label for="ai-prompt" class="block text-sm font-medium text-gray-700 mb-2">Recipe Description</label>
        <textarea data-ai-recipe-generator-target="prompt" 
                  id="ai-prompt"
                  rows="4" 
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="e.g., A spicy Thai curry with chicken and vegetables, or A healthy breakfast smoothie with berries and protein powder..."></textarea>
      </div>
      
      <div data-ai-recipe-generator-target="error" class="hidden mb-4 p-3 bg-red-50 border border-red-200 rounded-md text-red-700"></div>
      
      <div class="flex gap-3">
        <button type="button" 
                data-action="click->ai-recipe-generator#generateRecipe"
                class="flex-1 bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors duration-200 flex items-center justify-center gap-2">
          <span data-ai-recipe-generator-target="loadingSpinner" class="hidden">
            <svg class="animate-spin h-5 w-5" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"/>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"/>
            </svg>
          </span>
          Generate Recipe
        </button>
        <button type="button" 
                data-action="click->ai-recipe-generator#closeModal"
                class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition-colors duration-200">
          Cancel
        </button>
      </div>
    </div>
  </div>

  <!-- Generated Image Preview -->
  <div id="generated-image-container" class="hidden mb-6">
    <h3 class="text-lg font-semibold mb-2">Generated Image Preview:</h3>
    <img id="generated-image-preview" class="hidden max-w-full h-64 object-cover rounded-lg shadow-lg" alt="Generated recipe image">
    <p class="text-sm text-gray-600 mt-2">This is a preview of the AI-generated image. You can replace it by uploading your own image below.</p>
  </div>

  <%= render "form", recipe: @recipe %>

  <%= link_to "Back to recipes", recipes_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
