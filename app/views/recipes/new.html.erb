<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New recipe</h1>

  <% if @generation&.data&.present? %>
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-800">Recipe prefilled from AI generation</h3>
                 <div class="mt-2 text-sm text-blue-700">
           <p>This form has been prefilled with data from your AI recipe generation: "<strong><%= @generation.prompt %></strong>". You can review and edit all fields before saving.</p>
           <% if @generation.image.attached? || @generation.images.attached? %>
           <p class="mt-2">ðŸ“¸ Generated images will be automatically attached to your recipe when you save it.</p>
           <% end %>
         </div>
      </div>
    </div>
  </div>
  <% end %>

  <%= render "form", recipe: @recipe %>

  <%= link_to "Back to recipes", recipes_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
