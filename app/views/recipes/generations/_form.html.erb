<%= form_with(model: generation, url: (generation.persisted? ? recipes_generation_path(generation) : recipes_generations_path), local: true) do |form| %>
  <% if generation.errors.any? %>
  <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
    <h2><%= pluralize(generation.errors.count, "error") %> prohibited this generation from being saved:</h2>

    <ul>
      <% generation.errors.each do |error| %>
      <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :prompt, "Recipe Description", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :prompt, 
          rows: 6,
          placeholder: "Describe the recipe you want to generate (e.g., 'A spicy pasta dish with chicken and vegetables' or 'Chocolate chip cookies that are chewy')",
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      <p class="mt-2 text-sm text-gray-500">
        Be as specific as possible. Include cuisine type, ingredients, cooking style, or any special requirements.
      </p>
    </div>

    <div class="bg-blue-50 p-4 rounded-lg">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">What happens next?</h3>
          <div class="mt-2 text-sm text-blue-700">
            <ul class="list-disc list-inside">
              <li>AI will generate a complete recipe with ingredients and instructions</li>
              <li>A high-quality food image will be created</li>
              <li>Additional gallery images will be generated</li>
              <li>The process takes a few minutes to complete</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Generate Recipe", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %> 