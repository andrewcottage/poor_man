<div class="group relative border-b border-r border-gray-200 p-4 sm:p-6">
  <div class="aspect-h-1 aspect-w-1 overflow-hidden rounded-lg bg-gray-200 group-hover:opacity-75">
    <%= image_tag recipe.image, class: 'h-full w-full object-cover object-center' %>
  </div>
  <div class="pb-4 pt-10 text-center">
    <h3 class="text-sm font-medium text-gray-900">
      <%= link_to recipe_path(recipe.slug) do %>
        <span aria-hidden="true" class="absolute inset-0"></span>
        <%= recipe.title %>
      <% end %>
    </h3>
    <%= render 'recipes/card/rating', rating: recipe.rating.to_i, number_of_reviews: recipe.ratings.count %>
  </div>
</div>