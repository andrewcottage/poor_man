<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Create New Family</h1>
    <p class="text-gray-600">Start sharing recipes with your family members</p>
  </div>

  <%= form_with model: @family, local: true, class: "bg-white shadow-md rounded-lg p-6" do |form| %>
    <% if @family.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc list-inside">
                <% @family.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="space-y-6">
      <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :name, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "e.g., The Smith Family" %>
      </div>

      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :description, rows: 4, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Optional: Describe your family or what kind of recipes you'll be sharing..." %>
      </div>

      <div class="flex items-center justify-between pt-4">
        <%= link_to "Cancel", families_path, class: "btn btn-secondary" %>
        <%= form.submit "Create Family", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <div class="mt-8 bg-blue-50 rounded-lg p-4">
    <h3 class="text-sm font-medium text-blue-800 mb-2">What happens next?</h3>
    <ul class="text-sm text-blue-700 space-y-1">
      <li>• A default "Family Recipes" cookbook will be created automatically</li>
      <li>• You can invite family members by email</li>
      <li>• All family members can add and edit recipes in shared cookbooks</li>
      <li>• Only you can manage family settings and create new cookbooks</li>
    </ul>
  </div>
</div>